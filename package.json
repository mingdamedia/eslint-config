{
  "name": "@team-lab/eslint-config",
  "version": "0.1.0",
  "description": "teamLab's ESLint configuration",
  "main": "base.js",
  "scripts": {
    "lint": "eslint --ext js .",
    "test": "npm run test:js && npm run test:ts",
    "test:js": "eslint --ext js -c base.js --no-ignore samples/js/**/*.js",
    "test:ts": "eslint --ext ts -c typescript.js --no-ignore samples/ts/**/*.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/team-lab/eslint-config.git"
  },
  "author": "teamLab <https://www.team-lab.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/team-lab/eslint-config/issues"
  },
  "homepage": "https://www.team-lab.com",
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^1.13.0",
    "@typescript-eslint/parser": "^1.13.0",
    "eslint": "^6.2.1",
    "eslint-config-typescript": "^3.0.0",
    "eslint-plugin-import": "^2.18.2",
    "typescript": "^3.5.3"
  },
  "dependencies": {
    "confusing-browser-globals": "^1.0.8"
  }
}
